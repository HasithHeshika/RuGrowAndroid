
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any user (authenticated or not) to read plant data.
    match /plants/{plantId} {
      allow read, write: if true;

      // Allow any user to read/write to subcollections.
      match /{allPaths=**} {
        allow read, write: if true;
      }
    }
  }
}

// Realtime Database Rules
// WARNING: The following rules are wide open and should be secured before production.
// They allow anyone, authenticated or not, to read and write to your entire database.
{
  "rules": {
    ".read": "true",
    ".write": "true"
  }
}
