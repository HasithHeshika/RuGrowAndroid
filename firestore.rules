
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in (even anonymously)
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'plants' collection and all its subcollections
    match /plants/{plantId=**} {
      // Allow anyone to read data (get, list).
      // This is necessary for the app to display plant and sensor data
      // regardless of the user's sign-in status on initial load.
      allow read: if true;

      // Allow only signed-in users to create, update, or delete data.
      // This protects your database from unauthorized modifications.
      allow write: if isSignedIn();
    }
  }
}
